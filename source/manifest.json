{
  "name": "bc-nudge",
  "version": "0.0.1",
  "description": "Listening on Spotify? Buy it on Bandcamp, ya goob!",
  "homepage_url": "https://github.com/addiebarron/bc-nudge",
  "manifest_version": 2,
  "minimum_chrome_version": "74",
  "applications": {
    "gecko": {
      "id": "bc-nudge@addiebarron.github.io",
      "strict_min_version": "67.0"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": ["media/*"],
  "permissions": ["tabs", "*://*.bandcamp.com/*", "*://*.spotify.com/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval' *.bandcamp.com/*; object-src 'self'",
  "options_ui": {
    "chrome_style": true,
    "page": "options/options.html"
  },
  "content_scripts": [
    {
      "matches": ["*://open.spotify.com/*"],
      "css": ["content/style.css"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": {
      "128": "icon.png"
    }
  },
  "background": {
    "scripts": ["browser-polyfill.min.js", "background/index.js"]
  }
}
